{
  "version": 2,
  "builds": [
    { "src": "apps/backend/index.js", "use": "@vercel/node" },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/backend/index.js" },
    { "src": "/_assets/(.*)", "dest": "apps/frontend/dist/_assets/$1" },
    { "src": "/(.*)\\.(js|css|png|jpg|jpeg|svg|ico|json)", "dest": "apps/frontend/dist/$1.$2" },
    { "src": "/(.*)", "dest": "apps/frontend/dist/index.html" }
  ]
}